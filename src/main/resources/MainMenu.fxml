<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ControllerMainMenu"
      alignment="CENTER"
      fx:id="vbox"
      stylesheets="style.css"
      styleClass="background">
    <Label styleClass="title, title-big" text="Snake"/>
    <Button styleClass="btn, btn-big, btn-red" text="New Game" onMouseClicked="#goToSettingsMenu">
        <VBox.margin>
            <Insets><bottom>15</bottom><top>30</top></Insets>
        </VBox.margin>
    </Button>
    <Button styleClass="btn, btn-big, btn-yellow" text="High Scores" onMouseClicked="#goToLeaderboard">
        <VBox.margin>
            <Insets><bottom>15</bottom><top>15</top></Insets>
        </VBox.margin>
    </Button>
    <Button styleClass="btn, btn-big, btn-mint" text="Exit" onMouseClicked="#exit">
        <VBox.margin>
            <Insets><bottom>15</bottom><top>15</top></Insets>
        </VBox.margin>
    </Button>
</VBox>
